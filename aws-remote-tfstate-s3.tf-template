terraform {
  backend "s3" {
    # TODO: Customize the name of this bucket (unfortunately, locals and variables are not allowed here)!
    bucket         = "<your-user-name>-csta-tfstate-remote-s3"
    key            = "cost-explorer"
    encrypt        = true
  }
}

